<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Read the Latest Dev News
            </h1>
            <h2 class="subtitle">
                Click 'Scrape' to get the latest articles
            </h2>
        </div>
    </div>
</section>


<div class="card">
    <div class="card-content"></div>
    <div class="col s8 left-align">
        {{#each article}}
        <article class="media">
            <figure class="media-left">
                <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong>{{this.title}}</strong>

                    </p>
                </div>
                <nav class="level is-mobile">
                    <div class="level-left">
                        <a href="/readArticle/{{this._id}}" class="level-item">
                            <span class="icon is-small"><i class="fab fa-readme"></i></span>
                        </a>

                        <a href="/saveArticle/{{this._id}}" class="level-item">
                            <span class="icon is-small"><i class="fas fa-heart"></i></span>
                        </a>
                    </div>
                </nav>
            </div>
        </article>
